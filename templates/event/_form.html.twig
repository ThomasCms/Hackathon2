<div class="sectionSpace"></div>
<h1>Ajouter un évènement</h1>
<div class="sectionSpace"></div>
{{ form_start(form) }}
    <div class="form-group">
    <label class="control-label">{{ form_label(form.nom) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            {{ form_widget(form.nom) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.date) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">

            {{ form_widget(form.date) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.lieu) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            {{ form_widget(form.lieu) }}
        </div>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{ form_label(form.description) }}</label>
    <div class="form-group">
        <div class="input-group mb-3">
            {{ form_widget(form.description) }}
        </div>
    </div>
</div>
<button class="btn btn-contact">{{ button_label|default('Envoyer') }}</button>
{{ form_end(form) }}
