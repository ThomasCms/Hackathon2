{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>
    <div class="mt-5"></div>
    <h2 style="font-size: 50px"><a class="mt-5" href="{{ path('event_new') }}">Création d'un évènement</a>
    </h2>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>Description</th>
            <th>actions</th>
            <th>Bilan</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.nom }}</td>
                <td>{{ event.date ? event.date|date('d M Y') : '' }}</td>
                <td>{{ event.lieu }}</td>
                <td>{{ event.description }}</td>
                <td class="row">
                    <a href="{{ path('event_edit', {'id': event.id}) }}">Edition</a>
                    <div> /</div>
                    <a href="{{ path('player', {'id': event.id}) }}">Lancement</a>
                </td>
                <td>
                    <a href="{{ path('camembert', {'id': event.id}) }}">Afficher</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
